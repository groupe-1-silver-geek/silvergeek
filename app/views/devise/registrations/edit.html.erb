

  <h1 class="text-3xl font-roboto font-bold">Votre profil</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field ">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "h-8 pl-0 bg-transparent border-t-transparent border-r-transparent border-l-transparent border-b-orange-600 w-72 mb-4" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email%></div>
    <% end %>

    <div class="field">
      <%= f.label :Mot_de_passe %> <br />
      <%= f.password_field :password, placeholder: "Nouveau mot de passe", class: "h-8 pl-0 bg-transparent border-t-transparent border-r-transparent border-l-transparent border-b-orange-600 w-72 mb-4" %>

    </div>

    <div class="field">
      <%= f.label :Confirmer_le_mot_de_passe %><br />
      <%= f.password_field :password_confirmation, placeholder: "Confirmer le mot de passe", class: "h-8 pl-0 bg-transparent border-t-transparent border-r-transparent border-l-transparent border-b-orange-600 w-72 mb-6" %>
    </div>


    <div class="actions w-72 color-blue flex p-4 rounded-lg justify-center items-center text-base text-white">
      <%= f.submit "Modifier le mot de passe" %>
    </div>
  <% end %>

