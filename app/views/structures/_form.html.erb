<%= form_with(model: structure) do |form| %>
  <% if structure.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(structure.errors.count, "error") %> prohibited this structure from being saved:</h2>

      <ul>
        <% structure.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="flex flex-col w-64  ml-auto mr-auto gap-5 mt-16 relative ">


  <%= link_to "/structures" do %>
      <%= content_tag(:svg, viewBox: "0 0 24 24", fill: "none", xmlns: "http://www.w3.org/2000/svg", width: "24", height: "24") do %>
        <%= content_tag(:path, "", d: "M12 3L13.5862 4.58625L7.30875 10.875H21V13.125H7.30875L13.5862 19.4137L12 21L3 12L12 3Z", fill: "#191919") %>
      <% end %>
  <% end %>
  <h1 class="text-3xl font-roboto">Ajouter une Structure</h1>

  <div>
    <%= form.label :Adresse, style: "display: block" %>
    <%= form.text_field :adress, placeholder: "Adresse", class: "pl-0 h-6 w-64 bg-transparent focus:outline-none border-b-orange-500 border-t-transparent border-r-transparent  border-l-transparent" %>
  </div>

  <div>
    <%= form.label :Zipcode, style: "display: block" %>
    <%= form.number_field :zipCode, placeholder: "Code postal", class: "pl-0 h-6 w-64 bg-transparent focus:outline-none border-b-orange-500 border-t-transparent border-r-transparent  border-l-transparent" %>
  </div>

  <div>
    <%= form.label :Ville, style: "display: block" %>
    <%= form.text_field :city, placeholder: "Ville", class: "pl-0 h-6 w-64 bg-transparent focus:outline-none border-b-orange-500 border-t-transparent border-r-transparent  border-l-transparent" %>
  </div>

  <div>
    <%= form.label :Partenaire, style: "display: block" %>
    <%= form.text_field :partner_id, placeholder: "Partenaire", class: "pl-0 h-6 w-64 bg-transparent focus:outline-none border-b-orange-500 border-t-transparent border-r-transparent  border-l-transparent" %>
  </div>

  <div class="bg-blue-800 hover:bg-blue-900 flex p-4 rounded-lg justify-between items-center text-base text-white">
    <%= form.submit "Ajouter la structure" %>
